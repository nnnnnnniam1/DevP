<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>	
	<!-- Alias 설정 -->
	<typeAliases>
		<typeAlias alias="Member" type="com.devP.VO.MemberVO" />
		<typeAlias alias="User" type="com.devP.VO.UserVO" />
		<typeAlias alias="Project" type="com.devP.VO.ProjectVO" />
		<typeAlias alias="Chat" type="com.devP.VO.ChatVO" />
		<typeAlias alias="Issue" type="com.devP.VO.IssueVO" />
		<typeAlias alias="Task" type="com.devP.VO.TaskVO" />
		<typeAlias alias="Report" type="com.devP.VO.ReportVO" />
		<typeAlias alias="Reply" type="com.devP.VO.CommentVO" />
	</typeAliases>
	
	<!-- Sql Mapper 설정 -->
	<mappers>
		<mapper resource="mappings/user-mapping.xml" />
		<mapper resource="mappings/project-mapping.xml" />
		<mapper resource="mappings/chat-mapping.xml" />
		<mapper resource="mappings/issue-mapping.xml" />
		<mapper resource="mappings/task-mapping.xml" />
		<mapper resource="mappings/report-mapping.xml" />
		<mapper resource="mappings/member-mapping.xml" />
		<mapper resource="mappings/comment-mapping.xml" />
		<mapper resource="mappings/leader-mapping.xml" />
	</mappers>
</configuration>